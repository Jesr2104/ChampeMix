<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.just_jump.champemix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChampeMix">

        <activity
            android:name="com.just_jump.champemix.view.SongPickerActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name="com.just_jump.champemix.view.SoundEffectPickerActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name="com.just_jump.champemix.view.MainActivity"
            android:screenOrientation="landscape">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>